{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "ESNext"],
    "types": ["react/jsx-runtime", "node"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler", 
    "noEmit": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "vite.config.ts",
    "convex/**/*.ts",
    "convex/**/*.tsx",
    "convex/**/*.d.ts"
  ]
} 